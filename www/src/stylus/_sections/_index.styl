#section1
	background $green-dark-matt
	background-repeat no-repeat
	background-size cover
	max-height 100vh
	max-width 100vw
	.shadow-light
		box-shadow 0px 3px 5px -1px rgba(0, 0, 0, 0.2), 0px 6px 10px 0px rgba(0, 0, 0, 0.14), 0px 1px 18px 0px rgba(0, 0, 0, 0.12)
	.shadow-normal
		box-shadow 0px 6px 6px -3px rgba(0, 0, 0, 0.2), 0px 10px 14px 1px rgba(0, 0, 0, 0.14), 0px 4px 18px 3px rgba(0, 0, 0, 0.12)
	.shadow-huge
		box-shadow 0px 10px 13px -6px rgba(0, 0, 0, 0.2), 0px 20px 31px 3px rgba(0, 0, 0, 0.14), 0px 8px 38px 7px rgba(0, 0, 0, 0.12)
	.header
		height 10vh
		width 100%
		max-width 75vw
		font-size 16px
		background $green-light-matt
		margin 0 auto 0 auto
		border-radius 0 0 5px 5px
		.header-columns
			column(1/2, $cycle: 2)
			height -webkit-fill-available
			.header-column-logo
				margin-top -0.5vh
				margin-left 0vw
				width auto
				height 105%
				background url('../images/logo/statSRV-bw-logo.svg') left no-repeat
				background-size contain
			.header-column-title
				padding-top 2rem
				color $white
				font-size 1rem
				font-weight regular
				text-align left
				margin-left 5rem
				z-index 5
				transition all .5s ease-in-out
			.header-column-menu
				float right
				padding-top 2rem
				color rgba(255,255,255,.75)
				font-size 1rem
				text-align right
				z-index 5
				transition all .5s ease-in-out
				a
					color rgba(255,255,255,.75)
					font-weight 300
					text-decoration none
					transition all .25s ease-in-out
					&:hover
						color $white
						// border-bottom 1px solid $white
			.header-column-menu:nth-of-type(2)
				margin-right 1vw
		.header-columns:nth-of-type(2)
			padding-right 1.5vw
			

	.content
		width 100%
		max-width 75vw
		height 80vh
		margin -4vh auto 1vh auto
		color $white
		font-size 16px
		.clients-list
			color $white
			margin-top 6.5vh
			.clients-list_client
				float left
				padding 1vh 0.5vw 1vh 1vw
				a
					color rgba(255,255,255,.75)
					font-weight 500
					text-decoration none
					line-height 1.75
					transition all .25s ease-in-out
					&:hover
						color $white
						border-bottom 1px solid $white
			.clients-list_client:nth-of-type(1)
				a
					color $white
					font-weight 500
					text-decoration none
					border-bottom 1px solid $white
					transition all .25s ease-in-out
					&:hover
						color $white
						border-bottom 1px solid $white
		.client-list_data-container
			padding-top 4.5vh
			box-shadow 0px 7px 9px -4px rgba(0, 0, 0, 0.2), 0px 14px 21px 2px rgba(0, 0, 0, 0.14), 0px 5px 26px 4px rgba(0, 0, 0, 0.12)
			.client-list_data-table
				min-height 75vh
				width 50vw
				// width 0vw
				// height 0vh
				// transition all .75s ease-in-out
				.client-list_data-table_content
					float left
					text-align center
					.icon
						float left
					.client-title
						float left
						color rgba(255,255,255,.75)
						font-weight 700
						.icon
							float right
					.client-content
						float right
						color rgba(255,255,255,.5)
						font-weight 300
						.client-icon
							float right
			.client-list_data-list
				padding-top 2.5rem
	.footer
		background-color $green-darker-matt
		width 100%
		max-width 75vw
		height 6vh
		color rgba(255,255,255,0.5)
		font-size 1em
		margin 2vh auto 0 auto
		padding 2vh
		border-radius 5px 5px 0 0
		.footer-column
			column(1/2, $cycle: 2)
			// padding 1.5vh
		.footer-column:nth-of-type(1)
			text-align left
		.footer-column:nth-of-type(2)
			text-align right
