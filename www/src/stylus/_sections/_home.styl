#section1
	// background-image url('../images/2.0/BG@2x.png')
	background rgba(0,0,0,1)
	background-repeat no-repeat
	background-size cover
	max-height 100vh
	max-width 100vw
	.header
		font-size 16px
		height 48px
		width 100%
		background transparent
		.header-columns
			column(1/2, $cycle: 2)
			height -webkit-fill-available
			.header-column-title
				padding-top 2rem
				color $white
				font-size 1rem
				font-weight regular
				text-align left
				margin-left 5rem
				z-index 5
				transition all .5s ease-in-out
			.header-column-menu
				column(1/2, $cycle: 2)
				padding-top 2rem
				color rgba(255,255,255,.75)
				font-size 1rem
				text-align center
				z-index 5
				transition all .5s ease-in-out
				a
					color rgba(255,255,255,.75)
					font-weight 300
					text-decoration none
					transition all .25s ease-in-out
					&:hover
						color $white
						border-bottom 1px solid $white
			.header-column-menu:nth-of-type(1)
				width 75% !important
				text-align right
			.header-column-menu:nth-of-type(2)
				margin-right -2rem !important
				width 20% !important
				text-align left					
	.content
		margin-top 1rem 
		margin-left 4.5rem
		margin-bottom 1rem
		color $white
		font-size 16px
		height 90vh
		width 100%
		// margin-left auto 
		// margin-right auto
		transition all .75s ease-in-out .250s
		.clients-list
			color $white
			.clients-list_client
				float left
				padding .5rem
				a
					color rgba(255,255,255,.75)
					font-weight 500
					text-decoration none
					transition all .25s ease-in-out
					&:hover
						color $white
						border-bottom 1px solid $white
	.footer
		z-index 100
		width 100%
		height 5vh
		color $white
		font-size 16px
		text-align right
		position relative
		bottom 10vh
