/* snackbar */
#snackbar
	min-width 15vw
	height 5vh
	margin-left -7.5vw
	background-color rgba(25,41,41,1)
	text-align center
	border-radius 2em
	border 0.75px solid #747a86
	padding 8px
	position fixed
	z-index 1
	left 50%
	opacity 0
	bottom -10vh
	box-shadow 0px 8px 10px -5px rgba(255, 255, 255, 0.2), 0px 16px 24px 2px rgba(0, 0, 0, 0.14), 0px 6px 30px 5px rgba(0, 0, 0, 0.12)
	.column
		column(1/2, $cycle: 2)
		height 30px
		float left
		p.text,
		p.text-points
			margin 0em 0em 0em 0em
			float left
			font-weight 300
			font-size 1em
			line-height 2em
			padding-left 0.25vw
			color rgba(255,255,255,0.75)
		#text-points
			padding-left 0em !important
	.column:nth-of-type(1)
		width 20%
	.column:nth-of-type(2)
		width 72.5%
