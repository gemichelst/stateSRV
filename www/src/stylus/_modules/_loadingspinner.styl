/* loadingspinner - position it at the bottom and in the middle of the screen */

@keyframes loadingSpinner {
	0% { transform: rotate(0deg); }
	100% { transform: rotate(360deg); }
}
@keyframes loadingSpinnerNEW {
	0% {
		-webkit-transform: rotate(0deg);
		transform: rotate(0deg);
	}
	100% {
		-webkit-transform: rotate(360deg);
		transform: rotate(360deg);
	}
}

.loading-spinner_small
	// position absolute
	top 0.5rem
	left 0.5rem
	background rgba(0,0,0,.5)
	z-index 100
	.loading-spinner
		font-size 10px
		margin 2.5px auto
		text-indent -9999em
		width 2.5em
		height 2.5em
		border-radius 50%
		background #ffffff
		background -moz-linear-gradient(left, #ffffff 10%, rgba(255, 255, 255, 0) 42%)
		background -webkit-linear-gradient(left, #ffffff 10%, rgba(255, 255, 255, 0) 42%)
		background -o-linear-gradient(left, #ffffff 10%, rgba(255, 255, 255, 0) 42%)
		background -ms-linear-gradient(left, #ffffff 10%, rgba(255, 255, 255, 0) 42%)
		background linear-gradient(to right, #ffffff 10%, rgba(255, 255, 255, 0) 42%)
		position relative
		-webkit-animation loadingSpinnerNEW 1.4s infinite linear
		animation loadingSpinnerNEW 1.4s infinite linear
		-webkit-transform translateZ(0)
		-ms-transform translateZ(0)
		transform translateZ(0)
	.loading-spinner:before
		width 50%
		height 50%
		background #ffffff
		border-radius 100% 0 0 0
		position absolute
		top 0
		left 0
		content ''
	.loading-spinner:after
		background #747a86
		width 75%
		height 75%
		border-radius 50%
		content ''
		margin auto
		position absolute
		top 0
		left 0
		bottom 0
		right 0

.loading-spinner_large
	display none
	position absolute
	top 0vh
	background rgba(0,0,0,.25)
	z-index 100
	width 100%
	height 101%;
	opacity 0
	transition opacity 1.5s ease-in-out
	.loading-spinner
		border 15px solid rgba(255,255,255,.75)
		border-radius 50%
		width 150px
		height 150px
		margin-top: calc(50% - 75px)
		margin-left auto
		margin-right auto
		animation loadingSpinner 2s linear infinite
		box-shadow 0px 5px 5px -3px rgba(0, 0, 0, 0.2), 0px 8px 10px 1px rgba(0, 0, 0, 0.14), 0px 3px 14px 2px rgba(0, 0, 0, 0.12)
		border-top 15px solid $green-light-matt
		
